{
  "compilerOptions": {
    // Pastas
    "outDir": "./js", // JS compilado vai para a pasta js
    "rootDir": "./ts", // pasta onde ficam os arquivos TS

    // Configuração do JS gerado
    "module": "ES6", // ES Modules, para usar import/export no navegador
    "target": "ES6", // versão JS gerada
    "sourceMap": true, // gera .map para depuração

    // Typechecking rigoroso
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Interoperabilidade
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    // Ignorar checagem de bibliotecas externas
    "skipLibCheck": true
  },
  "include": ["ts/**/*"] // quais arquivos TypeScript compilar
}
